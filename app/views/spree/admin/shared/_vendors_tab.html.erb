<% if current_spree_user.respond_to?(:has_spree_role?) && current_spree_user.has_spree_role?(:admin) %>
  <ul class="nav nav-sidebar border-bottom">
    <%= tab plural_resource_name(Spree::Vendor), url: admin_vendors_path, icon: 'home' %>
  </ul>
<% end %>
<% if defined?(spree_vendor_user) && spree_vendor_user %>
  <ul class="nav nav-sidebar border-bottom">
		<% if current_spree_user.vendors.one? %>
    	<%= tab Spree::Vendor.model_name.human, url: edit_admin_vendor_setting_path(current_spree_user.vendors.first), icon: 'home' %>
    <% end %>
 		<% if current_spree_user.vendors.many? %>
    	<%= tab plural_resource_name(Spree::Vendor), url: admin_vendor_settings_path, icon: 'home' %>
    <% end %>
  </ul>
<% end %>